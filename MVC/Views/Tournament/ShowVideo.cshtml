@{
    ViewData["Title"] = "Show Video";
    Layout = "_Layout";
}

<h1>Show Video</h1>

<div class="video-container">
    <iframe width="560" height="315" src="@ViewBag.EmbedUrl" frameborder="0" allowfullscreen></iframe>
</div>

<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>
